<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rounded_border"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_zoom_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_sub_btn"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <Button
            android:id="@id/zoom_out"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/goods_sub_btn"
            android:gravity="center"
            android:padding="22dp"
            android:textColor="@color/bg_color_2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sub_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.01"
            android:textColor="@color/title_color_3"
            android:textSize="9sp" />
    </LinearLayout>


    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/divider_color" />

    <EditText
        android:id="@id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:minWidth="100dp"
        android:textColor="@color/title_color_1"
        android:textSize="13sp"
        tools:text="0.00" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/divider_color" />

    <LinearLayout
        android:id="@+id/ll_zoom_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_add_btn"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <Button
            android:id="@id/zoom_in"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@mipmap/goods_add_btn"
            android:gravity="center"
            android:padding="22dp"
            android:textColor="@color/bg_color_2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/add_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.01"
            android:textColor="@color/title_color_3"
            android:textSize="9sp" />
    </LinearLayout>
</merge>
