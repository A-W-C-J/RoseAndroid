<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color_2"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <TextView
        android:textColor="@color/title_color_1"
        android:id="@+id/new_contract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />

    <TextView
        android:id="@+id/valid_assets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_contract"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="可用现金：" />

    <TextView
        android:id="@+id/tv_total_assets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_contract"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@+id/valid_assets"
         />

    <TextView
        android:id="@+id/profit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
         />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/profit"
        android:layout_marginTop="@dimen/activity_vertical_margin"
         />

    <View
        android:layout_below="@+id/date"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/divider_color" />
</RelativeLayout>
